!!!
%html
	%head
		%title Jukestation

		%meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", name: "viewport"}/

		%link{:rel => "stylesheet", :href => "//fonts.googleapis.com/css?family=Yanone+Kaffeesatz:400,300,700"}/

		= stylesheet_link_tag "application", media: "all"
		= csrf_meta_tags
		
		%script{:src => '//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.10/require.min.js', :'data-main' => '/assets/main.js'}
	%body
		%section{:'ng-controller' => 'jukeController'}
			.loading
				.vh
					.spinner
						.cube1
						.cube2
			= yield

			.zoom-anim-dialog.mfp-hide#small-dialog
				%ul.m0.p0.no-ul
					%li{:'ng-repeat' => "video in fxqueue"}
						{{ video.title }}
					%li{:'ng-repeat' => "video in queue", :'ng-if' => "$index >= track"}
						{{ video.title }}

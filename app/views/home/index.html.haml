.search-wrap
	%section{:'ng-controller' => 'ytsController'}
		.search-box
			%input{:type => "text", :placeholder => "Which video are you looking for?", :'ng-model' => "query", :id => "q", :autocomplete => "off"}/
		.search-results
			%ul.no-ul.m0.p0.ul-ib
				%li{:'ng-repeat' => "v in ytvideos"}
					%yt-video{:video => 'v', :add => "enqueue(v)"}

.player
	.intrinsic-wrap 
		#player
.wrap
	.white.hidden
		%ul.m0.p0.no-ul.ul-ib
			%li{:'ng-repeat' => "video in queue"}
				{{ video.title }}
		{{fxqueue}}
	.tx-r
		%button.button.icon-pause{:'ng-click' => "pause()"}
		%button.button.icon-shuffle{:'ng-click' => "shuffle()"}
		%button.button.icon-save{:'ng-click' => "sync()"}
	.videos-grid
		%jk-video{:'ng-repeat' => "video in playlist track by $index", :video => "video", :pushfxq => "pushfxq(video)", :remove => 'remove($index)', :undo => "undo($index)", :'repeat-edge' => true}
